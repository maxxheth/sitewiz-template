{
  "name": "Legal Professional",
  "description": "Authority and trust-focused design system for legal services",
  "version": "1.0.0",
  "colorPalette": {
    "name": "Legal Authority",
    "primary": {
      "base": "#1f2937",
      "light": "#374151",
      "dark": "#111827",
      "subtle": "#f9fafb",
      "intense": "#030712"
    },
    "secondary": {
      "base": "#374151",
      "light": "#6b7280",
      "dark": "#1f2937",
      "subtle": "#f3f4f6",
      "intense": "#111827"
    },
    "accent": {
      "base": "#d97706",
      "light": "#f59e0b",
      "dark": "#b45309",
      "subtle": "#fef3c7",
      "intense": "#92400e"
    },
    "neutral": {
      "base": "#6b7280",
      "light": "#9ca3af",
      "dark": "#374151",
      "subtle": "#f9fafb",
      "intense": "#111827"
    },
    "semantic": {
      "success": {
        "base": "#059669",
        "light": "#10b981",
        "dark": "#047857",
        "subtle": "#d1fae5",
        "intense": "#065f46"
      },
      "warning": {
        "base": "#d97706",
        "light": "#f59e0b",
        "dark": "#b45309",
        "subtle": "#fef3c7",
        "intense": "#92400e"
      },
      "error": {
        "base": "#dc2626",
        "light": "#ef4444",
        "dark": "#b91c1c",
        "subtle": "#fee2e2",
        "intense": "#991b1b"
      },
      "info": {
        "base": "#2563eb",
        "light": "#3b82f6",
        "dark": "#1d4ed8",
        "subtle": "#dbeafe",
        "intense": "#1e40af"
      }
    }
  },
  "fontCombination": {
    "name": "Legal Authority",
    "heading": {
      "family": "Playfair Display",
      "weights": [400, 600, 700],
      "fallback": "Georgia, serif"
    },
    "body": {
      "family": "Inter",
      "weights": [400, 500, 600],
      "fallback": "system-ui, -apple-system, sans-serif"
    },
    "mono": {
      "family": "JetBrains Mono",
      "weights": [400, 500],
      "fallback": "Consolas, Monaco, monospace"
    }
  },
  "spacing": {
    "scale": "1.2",
    "baseUnit": "0.25rem",
    "containerMaxWidth": "1200px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
  },
  "borderRadius": {
    "sm": "0.125rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem"
  },
  "context": {
    "industries": ["legal", "law", "attorney", "paralegal", "court"],
    "businessTypes": ["law-firm", "solo-practice", "corporate-legal", "public-defender", "legal-aid"],
    "mood": ["professional", "authoritative", "trustworthy", "serious", "confident"],
    "complexity": "high",
    "accessibilityLevel": "wcag-aa"
  },
  "customizations": [
    {
      "type": "practice_area_focus",
      "description": "Adjust styling for legal specialties (family law = warmer, corporate = cooler)",
      "compatibility": ["accent", "secondary"]
    },
    {
      "type": "firm_branding",
      "description": "Integrate law firm brand colors while maintaining professional authority",
      "compatibility": ["primary", "accent"]
    },
    {
      "type": "document_readability",
      "description": "Enhanced typography for legal document review",
      "compatibility": ["body", "mono"]
    }
  ]
} 